{
  "name": "bun-hono-api-starter",
  "version": "1.2.1",
  "description": "A starter template for building APIs with Bun and Hono",
  "author": "Mehedi <admin@promehedi.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ProMehedi/bun-hono-api-starter"
  },
  "scripts": {
    "start": "NODE_ENV=production bun run server.ts",
    "dev": "bun run --hot server.ts",
    "format": "bunx prettier --write '**/*.{js,jsx,ts,tsx}'",
    "format:check": "bunx prettier --check '**/*.{js,jsx,ts,tsx}'",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "hono": "^4.11.3",
    "mongoose": "^9.1.1",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "^9.1.7"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "bun",
    "hono",
    "mongodb",
    "mongoose",
    "typescript",
    "api",
    "rest",
    "starter",
    "template"
  ]
}
